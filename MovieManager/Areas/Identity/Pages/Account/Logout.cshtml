@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <link rel="stylesheet" href="~/css/styleLoginRegister.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
</header>

<div class="formContainerLogout">
     
	<h1>
        <div class="illustration">
        <i class="icon ion-ios-locked" style="color: #2980ef;"></i>
        </div>
        @ViewData["Title"]
     </h1>
 @{
    if (User.Identity.IsAuthenticated)
    {
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="emptyButton">     
                <div class="containerAnimLogout">
	                <div class="loader">
		                <div class="line line--1"></div>
		                <div class="line line--2"></div>
	                </div>
                </div>
            </button>
        </form>
    }
    else
    {
         <p>You have successfully logged out of the application.</p>
    }
}
</div>


