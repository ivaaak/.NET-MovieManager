@{
	ViewData["Title"] = "Profile Page";

	//var movieListWatched = MovieManager.Models.DB_Operations.GetFromDB.GetUserMovieList(int UserId, "watched");
	//d1c2cdda-d6c7-48a3-b681-a2c11d7e8fc1 - id
	var watched = MovieManager.Services.GetFromDB
		.GetUserMovieList("d1c2cdda-d6c7-48a3-b681-a2c11d7e8fc1", "current");
	
	var current = MovieManager.Services.GetFromDB
		.GetUserMovieList("d1c2cdda-d6c7-48a3-b681-a2c11d7e8fc1", "watched");

	var allMovies = MovieManager.Services.GetFromDB.GetListFromDBbyTitle("");
}

@section styles{
	<link href="~/css/style.css" asp-append-version="true" rel="stylesheet">
	<link href="~/css/styleMovies.css" asp-append-version="true" rel="stylesheet">
	<link href="~/css/styleMovieContainer.css" asp-append-version="true" rel="stylesheet">

	<script src="~/js/home.js"></script>
	<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
}
 

<!--=====LOAD MOVIE COLUMNS=====-->
<main class="app" id="scrollBlackThin">
	<h1 class="info1"> 
		<img src="~/img/watched icon2 dark.png" width="60" height="40">Watched
		<div class="hidden-info1">Past</div>
	</h1>
	@foreach (var movie in watched)
	{
	<div class="movieContainer">
		<div class="flex-container">
		<div class="flex-items">
			<a href="/Movie/MovieCard/@movie.MovieId">
				<img class="moviePoster" alt="Image" src="@movie.PosterUrl"> 	
			</a>
		</div>
		<div class="flex-items">
			<h2 class="movieTitle"> @movie.Title </h2>
			<p class="movieRating"> <img class="IMDBStar" src="~/img/star.png"> @movie.Rating/10 - Rating</p>
			<p class="movieDesc"> @movie.Overview </p>
			<div class="buttonsList">
				<input class="TrailerButton" id="TrailerButton" type="button" value="▶ Trailer" onclick=""><br/>
				<input class="TrailerButton" id="TrailerButton" type="button" value="Write a Review" onclick=""><br/>
			</div>
		</div>
		</div>
	</div>
	}
	<div class="movieContainer">	
		<a href="/Movie/Search">
		<img class="addMovie" src="~/img/movieAddOrange.png">
		</a>
	</div>
</main>



