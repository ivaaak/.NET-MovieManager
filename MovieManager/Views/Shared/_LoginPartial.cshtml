@using Microsoft.AspNetCore.Identity
@using MovieManager.Data.DataModels
@using MovieManager.Infrastructure.Extensions;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager  


@if (SignInManager.IsSignedIn(User))
{
<li onclick="location.href = '/Movie/Main'" class="main-item"><span class="myprofile"></span></li>

<li class="main-item"><span class="watchlist"></span>
	<ol class="sub-menu">
		<li onclick="location.href = '/Home/Profile'" class="sub-item item-left"><span class="ProfilePage"></span></li>
		<li onclick="location.href = '/Home/Playlists'" class="sub-item item-left"><span class="Playlists"></span></li>
		<li onclick="location.href = '/Movie/MovieList/favorites'" class="sub-item item-left"><span class="Favorites"></span></li>
		<li onclick="location.href = '/Home/Actors'" class="sub-item item-left"><span class="Actors"></span></li>
		<li onclick="location.href = '/Home/Reviews'" class="sub-item item-left"><span class="Reviews"></span></li>
	</ol>
</li>

}
else
{
	<li asp-area="Identity" onclick="location.href = '/Identity/Account/Login'" class="main-item"><span class="login"></span></li>
	<li asp-area="Identity" onclick="location.href = '/Identity/Account/Register'" class="main-item"><span class="register"></span></li>
}